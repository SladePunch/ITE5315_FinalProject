<h2>Search Restaurants</h2>
<form action="/restaurants" method="POST">
    <label for="page">Page:</label>
    <input type="number" id="page" name="page" min="1" value="1" required>

    <label for="perPage">Results per Page:</label>
    <input type="number" id="perPage" name="perPage" min="1" value="5" required>

    <label for="borough">Borough:</label>
    <input type="text" id="borough" name="borough" placeholder="Optional">

    <label for="cuisine">Cuisine:</label>
    <input type="text" id="cuisine" name="cuisine" placeholder="Optional">

    <button type="submit">Search</button>
</form>